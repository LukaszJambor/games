<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="USER" id="init">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="game_entity"/>
            </not>
        </preConditions>
        <createTable tableName="game_entity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="distribution_path" type="INT"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="producer" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1" author="lukasz">
        <addColumn tableName="game_entity">
            <column name="producerName" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="lukasz">
        <dropColumn tableName="game_entity">
            <column name="producer"/>
        </dropColumn>
    </changeSet>
    <changeSet id="3" author="lukasz">
        <renameColumn tableName="game_entity" oldColumnName="producerName" newColumnName="producer_name"
                      columnDataType="VARCHAR(255)"/>
    </changeSet>
    <changeSet id="4" author="lukasz">
        <dropColumn tableName="game_entity" columnName="distribution_path"/>
        <addColumn tableName="game_entity">
            <column name="distribution_path" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="lukasz">
        <addColumn tableName="game_entity">
            <column name="type" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="6" author="lukasz">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="price_entity"/>
            </not>
        </preConditions>
        <createTable tableName="price_entity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="price" type="BIGINT"/>
            <column name="currency" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="lukasz">
        <addColumn tableName="game_entity">
            <column name="price_entity_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="game_entity" baseColumnNames="price_entity_id" constraintName="price_id"
                                 referencedTableName="price_entity"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
